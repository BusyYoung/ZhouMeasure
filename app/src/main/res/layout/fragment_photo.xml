<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:background="@drawable/tempbackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/drawArea"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:id="@+id/bottomBar"
            android:layout_alignParentBottom="true"
            android:src="@color/theme_default_primary_dark"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/btnRuler"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/refLen"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffff0000"
            android:textSize="20dp"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tarLen"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#ff0000ff"
            android:textIsSelectable="false"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:id="@+id/btnRuler"
            android:src="@drawable/ruler"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:id="@+id/btnCalc"
            android:src="@drawable/calculator"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/btnRuler"
            android:layout_toEndOf="@+id/btnRuler"
            android:layout_marginLeft="30dp"/>

    </RelativeLayout>


</RelativeLayout>