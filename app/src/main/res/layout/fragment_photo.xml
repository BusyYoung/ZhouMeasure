<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/drawArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/bottomBar"
            android:layout_width="550dp"
            android:layout_height="66dp"
            android:layout_alignEnd="@+id/tarLen"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/tarLen"
            android:src="#028ff5"/>

        <TextView
            android:id="@+id/refLen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="New Text"
            android:textColor="#97cb00"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/tarLen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="New Text"
            android:textColor="#028ff5"
            android:textIsSelectable="false"
            android:textSize="20dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/toolsContainer"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnRuler"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/bottomBar"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:src="@drawable/ruler"/>

        <ImageView
            android:id="@+id/btnCalc"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:layout_alignTop="@+id/bottomBar"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/btnRuler"
            android:layout_toRightOf="@+id/btnRuler"
            android:layout_weight="1"
            android:src="@drawable/calculator"/>

        <ImageView
            android:id="@+id/blankCameraBtn"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:src="#00ffffff"/>

        <ImageView
            android:id="@+id/blankReturnBtn"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:src="#00ffffff"/>
    </LinearLayout>


</RelativeLayout>